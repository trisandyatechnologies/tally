// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String  @id @default(auto()) @map("_id") @db.ObjectId
  firmname      String
  owner         String
  address       String
  gstNo         String
  email         String? @unique
  emailVerified Boolean @default(false)
  phone         String  @unique
  password      String?
}
